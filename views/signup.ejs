<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../partials/login_header.html %>
    <% include ../partials/header.html %>
  </head>
  <body>
    <div class="container">
      <div class="d-flex justify-content-center h-100">
        <div class="card" style="height: 500px;">
          <div class="card-header">
            <h3>Sign In</h3>
            
          </div>          
          <% if(typeof errs == 'object' && errs){ %>
            <% for(let err of errs) { %>
              <center style="color: red;"><%= err.message %></center>
              <% } } %>
          <div class="card-body">
            <form method="POST" >
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="firstname" name="firstname">                
              </div>              
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="lastname" name="lastname">                
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="email" name="email">                
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <input type="password" class="form-control" placeholder="password" name="password">
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="employee Id" name="emp_id">                
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="Organization Name" name="org_name">                
              </div>
              <div class="form-group">
                <input type="submit" value="Sign Up" class="btn float-right login_btn">
              </div>
            </form>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                  Already have an account?<a href="/">Login</a>
                </div>
               </div>  
        </div>
          
        </div>
      </div>
    </div>
  </body>
</html>
<% include ../partials/footer.html %>
